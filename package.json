{
  "name": "react-facebook-monorepo",
  "version": "10.0.1",
  "description": "Facebook components like a Login button, Like, Share, Comments, Embedded Post/Video, Messenger Chat, and Facebook Pixel tracking",
  "private": true,
  "workspaces": [
    "packages/react-facebook",
    "apps/docs"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/react-facebook",
    "build:docs": "npm run build --workspace=apps/docs",
    "dev:docs": "npm run dev --workspace=apps/docs",
    "test": "npm run test --workspace=packages/react-facebook",
    "test:component": "npm run test:component --workspace=packages/react-facebook",
    "lint": "npm run lint --workspace=packages/react-facebook",
    "typecheck": "npm run typecheck --workspace=packages/react-facebook",
    "deploy:docs": "npm run build && npm run deploy --workspace=apps/docs"
  },
  "author": {
    "name": "Zlatko Fedor"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/seeden/react-facebook.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}