{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "dom"],
    "types": ["cypress", "node"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}